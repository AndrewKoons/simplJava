<meta_metadata_repository name="test_repo" package="ecologylab.semantics.generated.test.test_repo">

	<meta_metadata name="metadata" comment="The Metadata Class" built_in="true">
		<scalar name="meta_metadata_name" tag="mm_name" hide="true" ignore_in_term_vector="true" comment="Stores the name of the meta-metadata, and is used on restoring from XML." scalar_type="String" />
		<collection name="mixins" child_type="metadata" polymorphic_global="true"/>
	</meta_metadata>
	
	<meta_metadata name="document" extends="metadata" comment="The Document Class" built_in="true">
		<scalar name="location" always_show="true" layer="8.0" comment="The document's actual location." scalar_type="ParsedURL" schema_org_itemprop="url"/>
		<collection name="additional_locations" child_scalar_type="ParsedURL"/>
	</meta_metadata>
	
	<meta_metadata name="article" extends="document">
		<scalar name="title" style="metadata_h1" layer="10.0" navigates_to="location" schema_org_itemprop="name" comment="The Title of the Document" scalar_type="String"  hint="XML_LEAF"/>
		<collection name="authors" child_type="author" child_extends="metadata">
			<scalar name="name" scalar_type="String" navigates_to="location" is_facet="true" as_composite_scalar="true" schema_org_itemprop="name" />
			<scalar name="affiliation" scalar_type="String" schema_org_itemprop="affiliation"/>
		</collection>
		<composite name="source" extends="document" comment="Metadata related to where an article is published.">
			<scalar name="archive_name" scalar_type="String" as_composite_scalar="true" comment="Same as title, but used for composite scalar" />
			<scalar name="location" hide="true" />
			<scalar name="year_of_publication" scalar_type="Int" is_facet="true" />
			<scalar name="isbn" scalar_type="String" />
			<scalar name="pages" scalar_type="String" />
		</composite>
		<scalar name="pages" layer="-1.0" navigates_to="table_of_contents" scalar_type="String" />
	</meta_metadata>

	<meta_metadata name="paper" extends="article">
		<collection name="authors" child_type="scholar" child_extends="author"><!-- here is polymorphism! -->
			<scalar name="location" scalar_type="ParsedURL" hide="true" schema_org_itemprop="url"/>
			<scalar name="city" scalar_type="String" />
		</collection>
		<scalar name="abstract_field" scalar_type="String" shadows="summary" tag="abstract" label="abstract" layer="9.0" hint="XML_LEAF" />
		<collection name="references" comment="Papers cited by this paper." child_tag="reference" child_type="paper" />
		<collection name="citations" comment="Papers that cite this paper." child_tag="citation" child_type="paper" />
		<collection name="classifications" comment="The Classifications of this paper." child_type="tag" child_extends="metadata">
			<scalar name="tag_name" scalar_type="String" navigates_to="link" />
			<scalar name="link" hide="true" scalar_type="ParsedURL" />
		</collection>
		<collection name="keywords" comment="Key Terms of the paper." child_type="tag"/>
	</meta_metadata>

</meta_metadata_repository>
