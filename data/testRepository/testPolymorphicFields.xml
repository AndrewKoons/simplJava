<meta_metadata_repository name="test_repo" package="ecologylab.semantics.generated.test.test_repo">

	<meta_metadata name="metadata" comment="The Metadata Class" built_in="true">
		<scalar name="meta_metadata_name" tag="mm_name" hide="true" ignore_in_term_vector="true" comment="Stores the name of the meta-metadata, and is used on restoring from XML." scalar_type="String" />
		<collection name="mixins" child_type="metadata" polymorphic_global="true"/>
	</meta_metadata>
	
	<meta_metadata name="item" extends="metadata" comment="the base item class.">
		<scalar name="id" scalar_type="Int" comment="the ID of this item." />
	</meta_metadata>
	
	<meta_metadata name="base" extends="metadata">
		<composite name="first_item" type="item" xpath="/first_item" comment="the first item of this collection.">
			<scalar name="id" xpath="./id" />
		</composite>
		<collection name="items" child_type="item" xpath="/items/item" comment="the collection of items.">
			<scalar name="id" xpath="./id" />
		</collection>
	</meta_metadata>

	<meta_metadata name="sub" extends="base">
		<composite name="first_item" type="my_item" extends="item" tag="my_first_item" xpath="/my_first_item">
			<scalar name="id" xpath="./id" />
			<scalar name="name" scalar_type="String" xpath="./name" comment="the name of this item." />
		</composite>
		<collection name="items" child_type="my_item" child_tag="my_item" xpath="/items/my_item">
			<scalar name="id" xpath="./id" />
			<scalar name="name" xpath="./name" />
		</collection>
	</meta_metadata>
	
	<meta_metadata name="sub_sub" extends="sub">
		<composite name="first_item" type="your_item" extends="my_item" tag="your_first_item" xpath="/your_first_item">
			<scalar name="id" xpath="./id" />
			<scalar name="name" xpath="./name" />
			<scalar name="description" scalar_type="String" xpath="./description" comment="the description of this item." />
		</composite>
		<collection name="items" child_type="your_item" child_tag="your_item" xpath="/items/your_item">
			<scalar name="id" xpath="./id" />
			<scalar name="name" xpath="./name" />
			<scalar name="description" xpath="./description" comment="the description of this item." />
		</collection>
	</meta_metadata>
	
</meta_metadata_repository>
