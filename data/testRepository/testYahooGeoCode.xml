		</collection>
	</meta_metadata>
	
	<meta_metadata name="yahoo_web_search" extends="yahoo_result_set">
		<selector url_stripped="http://api.search.yahoo.com/WebSearchService/V1/webSearch" />
		<scalar name="query" scalar_type="String" />
	</meta_metadata>
	
	<meta_metadata name="item" extends="metadata">
