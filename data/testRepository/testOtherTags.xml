<meta_metadata_repository name="test_repo" package="ecologylab.semantics.generated.test.test_repo">

	<meta_metadata name="metadata" comment="The Metadata Class" built_in="true">
		<scalar name="meta_metadata_name" tag="mm_name" hide="true" ignore_in_term_vector="true" comment="Stores the name of the meta-metadata, and is used on restoring from XML." scalar_type="String" />
		<collection name="mixins" child_type="metadata" polymorphic_global="true"/>
	</meta_metadata>
	
	<meta_metadata name="base" extends="metadata">
		<scalar name="name" scalar_type="String" comment="the name of this whole thing." />
		<composite name="first_item" type="item" extends="metadata" comment="the first item of this collection.">
			<scalar name="name" scalar_type="String" comment="the name of this item." />
		</composite>
		<composite name="representative_item" type="item" tag="rep_item" comment="the representative item of this collection." />
		<collection name="items" child_type="item" comment="the collection of items." />
	</meta_metadata>

	<meta_metadata name="sub" extends="base">
		<scalar name="name" tag="mingcheng" />
		<composite name="first_item" type="my_item" extends="item" tag="my_first_item">
			<scalar name="id" scalar_type="Int" comment="the ID of this item." />
		</composite>
		<composite name="representative_item" type="my_item" tag="my_rep_item" />
		<collection name="items" tag="my_items" child_type="my_item" child_tag="my_item" />
	</meta_metadata>
	
</meta_metadata_repository>
